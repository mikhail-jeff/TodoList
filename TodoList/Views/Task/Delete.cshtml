@model TodoList.Models.Task
@{
    ViewBag.Title = "Delete Task";
}

<div class="card mt-5">
    <div class="card-header">
        <h3>Delete Task</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <h5>
                    <span class="fw-bold text-uppercase">@Html.DisplayNameFor(model => model.Id)</span>:
                    <span>@Html.DisplayFor(model => model.Id)</span>
                </h5>
                <hr />
            </div>

            <div class="col-md-12">
                <h5>
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.Title)</span>:
                    <span>@Html.DisplayFor(model => model.Title)</span>
                </h5>
                <hr />
            </div>

            <div class="col-md-12">
                <h5>
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.DateStarted)</span>:
                    <span>@Model.DateStarted.ToString("MMMM d, yyyy, h:mm:ss tt")</span>
                </h5>
                <hr />
            </div>

            <div class="col-md-12">
                <h5>
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.DateOfCompletion)</span>:
                    <span>@Model.DateOfCompletion.ToString("MMMM d, yyyy, h:mm:ss tt")</span>
                </h5>
                <hr />
            </div>

            <div class="col-md-12">
                <h5>
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.Details)</span>:
                    <span>@Html.DisplayFor(model => model.Details)</span>
                </h5>
                <hr />
            </div>

            <div class="col-md-12">
                <h5>
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.AssignedTo)</span>:
                    <span>@Html.DisplayFor(model => model.AssignedTo)</span>
                </h5>
                <hr />
            </div>

            <div class="col-md-12">
                <h5>
                    <span class="fw-bold">@Html.DisplayNameFor(model => model.Status)</span>:
                    <span>@Html.DisplayFor(model => model.Status)</span>
                </h5>
                <hr />
            </div>

            <div class="row mt-3">
                <div class="col-md-12 d-flex justify-content-end ms-4 gap-2">
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
                    <a href="@Url.Action("Index", "Task")" class="btn btn-secondary">Cancel</a>
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title fw-bold" id="deleteModalLabel">Confirm Delete</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this task? This action cannot be undone.
                        </div>
                        <div class="modal-footer">
                            @using (Html.BeginForm("Delete", "Task", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.Id)
                                <button type="submit" class="btn btn-danger">Yes</button>
                                <a href="@Url.Action("Index", "Task")" class="btn btn-secondary ms-1">No</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
